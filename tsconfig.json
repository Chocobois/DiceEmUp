{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "noEmit": true,

    "resolveJsonModule": true,

    "moduleResolution": "node",
    "paths": {
      "/*": ["./src/*"]
    }
  },
  "include": ["src", "typings"]
}
